{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run tsoa:routes && tsx watch src/index.ts",
    "build": "bun run tsoa:gen && tsc && mkdir -p dist/generated && cp src/generated/swagger.json dist/generated/swagger.json",
    "db:deploy": "prisma migrate deploy && prisma generate",
    "db:seed": "tsx src/seed.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "start": "node dist/index.js",
    "lint": "eslint --max-warnings 0",
    "check-types": "bun run prepare && tsc --noEmit",
    "tools": "tsx prisma.config.ts",
    "tsoa:routes": "tsoa routes",
    "tsoa:spec": "tsoa spec",
    "tsoa:gen": "bun run tsoa:spec && bun run tsoa:routes",
    "prepare": "bun run tsoa:routes && bun run prisma:generate"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@tsoa/runtime": "^6.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "5",
    "express-oauth2-jwt-bearer": "^1.7.0",
    "pg": "^8.18.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^25.2.0",
    "@types/pg": "^8.16.0",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.39.1",
    "prisma": "^7.3.0",
    "tsoa": "^6.6.0",
    "tsx": "^4.19.2",
    "typescript": "5.9.2"
  }
}
