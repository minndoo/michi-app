{
  "extends": "@repo/typescript-config/node-server.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  },
  "references": [{ "path": "./tsconfig.tools.json" }],
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/seed.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
