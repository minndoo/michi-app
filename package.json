{
  "name": "michi-app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "commit": "cz",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint-staged": "lint-staged",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.8.1",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.8",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "react-hook-form": "^7.66.0",
      "zod": "^4.1.5",
      "@hookform/resolvers": "^5.2.2",
      "tamagui": "2.0.0-rc.0",
      "@tamagui/core": "2.0.0-rc.0",
      "@tamagui/cli": "2.0.0-rc.0",
      "@tamagui/lucide-icons": "2.0.0-rc.0",
      "@tamagui/react-native-svg": "2.0.0-rc.0",
      "@tamagui/config": "2.0.0-rc.0",
      "@tamagui/next-theme": "2.0.0-rc.0",
      "@tamagui/get-button-sized": "2.0.0-rc.0",
      "react-native-svg": "^15.15.1",
      "vitest": "^3.2.4"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  }
}
