      "@tamagui/cli": "2.0.0-rc.0",
      "@tamagui/lucide-icons": "2.0.0-rc.0",
      "@tamagui/react-native-svg": "2.0.0-rc.0",
      "@tamagui/config": "2.0.0-rc.0",
      "@tamagui/next-theme": "2.0.0-rc.0",
